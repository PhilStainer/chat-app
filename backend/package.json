{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/index.js",
  "license": "MIT",
  "scripts": {
    "start": "node ./build",
    "dev": "cross-env NODE_ENV=development nodemon -e js,graphql,json --exec babel-node src/index.js",
    "test": "jest --watch",
    "test:update": "jest --coverage",
    "build": "webpack --progress"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/app.js",
      "!src/utils/logger.js",
      "!src/utils/accessEnv.js",
      "!src/utils/dbConnection.js",
      "!src/graphql/apolloServer.js",
      "!src/graphql/context.js",
      "!src/graphql/schemas.js",
      "!src/graphql/resolvers.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "html",
      "text"
    ]
  },
  "dependencies": {
    "@sendgrid/mail": "^7.4.0",
    "apollo-server-core": "^2.19.0",
    "apollo-server-express": "^2.18.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "dataloader": "^2.0.0",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "graphql-fields": "^2.0.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.10",
    "pg": "^8.4.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-inline-import": "^3.0.0",
    "cross-env": "^7.0.2",
    "faker": "^5.1.0",
    "jest": "^26.6.1",
    "nodemon": "^2.0.6",
    "webpack": "^5.3.0",
    "webpack-cli": "^4.1.0",
    "webpack-node-externals": "^2.5.2"
  }
}
